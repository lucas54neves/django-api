[flake8]
max-line-length = 127
exclude = 
    venv,
    .venv,
    env,
    .env,
    migrations,
    __pycache__,
    .git,
    .github,
    htmlcov,
    .pytest_cache,
    *.egg-info,
    db.sqlite3

# Ignore some common errors in Django projects
# E203: whitespace before ':'
# W503: line break before binary operator
# E501: line too long (handled by black)
ignore = E203,W503,E501

max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py: F401
    */migrations/*: E501,F401
    */settings/*.py: E501,F401,F403,F405
    */admin.py: F401
    */tests.py: F401
    */views.py: F401
    users/models.py: F401

